@model ValidadorCartaoCredito.Mvc.ViewModels.CartaoCreditoViewModel
@{
    ViewBag.Title = "Bem vindo";
}
<div class="col-lg-12">
    <div class="row">

        @using (Ajax.BeginForm("Index", "CartaoCredito", new AjaxOptions
        {
            HttpMethod = "POST",
            UpdateTargetId = "resultado",
            //OnBegin = "startLoading()",
            //OnComplete = "stopLoading()",
            //OnFailure = "stopLoading()",
            //OnSuccess = "stopLoading()",

        }))
        {
            @Html.AntiForgeryToken()
            <div class="col-lg-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">Informe o número do cartão de Crédito</div>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(c => c.Numero, new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="pull-right">
                                    <button class="btn btn-success col-lg-offset-2"
                                            type="submit" style="margin-right: 35px">
                                        <i class="glyphicon glyphicon-credit-card"></i>
                                        Validar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        }

        <div class="col-lg-6" id="resultado">

        </div>



    </div>
</div>